# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

target 'my-comics' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for my-comics

  # DB
  pod 'RealmSwift'

  # Logger
  pod 'XCGLogger', '~> 7.0.1'

  # Linter
  pod 'SwiftLint'

  # Animation
  pod 'PKHUD', '~> 5.0'

  # Misc
  pod 'R.swift'
  pod 'LicensePlist'

  target 'my-comicsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'my-comicsUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
